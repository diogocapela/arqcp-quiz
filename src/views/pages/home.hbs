<main class="container">

    <p>
        <b>Plays:</b> <span id="plays">0</span>
        <br />
        <b>Correctas:</b> <span id="correctas">0</span>
    </p>

    <div class="jumbotron">
        <h1 class="display-4">arqcp-quiz</h1>
        <p id="question" class="lead"></p>
        <hr class="my-4">
        <button id="buttonTrue" type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">Verdadeiro</button>

        <button id="buttonFalse" type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">Falso</button>

        <button id="buttonNext" type="button" class="btn btn-primary">Next</button>
    </div>

</main>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Resposta</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="answer" class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>